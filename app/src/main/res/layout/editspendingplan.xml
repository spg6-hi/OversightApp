<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    tools:context=".pages.EditSpendingPlanPage">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/scrollViewDesc"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="50dp"
            android:paddingTop="20dp"
            >

            <TextView
                android:id="@+id/esptext"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:text="Edit Spending Plan"
                android:textSize="30dp"
                android:gravity="center"
                android:backgroundTint="@color/menuColor"
                android:textColorHint="@color/menuColor"
                android:textColor="@color/menuColor"
                android:inputType="number" />

            <EditText
                android:id="@+id/esp1"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Cars \u0026 Transportation"
                android:backgroundTint="@color/menuColor"
                android:textColorHint="@color/menuColor"
                android:textColor="@color/menuColor"
                android:inputType="number" />

            <EditText
                android:id="@+id/esp2"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Children"
                android:backgroundTint="@color/menuColor"
                android:textColorHint="@color/menuColor"
                android:textColor="@color/menuColor"
                android:inputType="number" />

            <EditText
                android:id="@+id/esp3"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Education"
                android:backgroundTint="@color/menuColor"
                android:textColorHint="@color/menuColor"
                android:textColor="@color/menuColor"
                android:inputType="number" />

            <EditText
                android:id="@+id/esp4"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Fines \u0026 Fees"
                android:backgroundTint="@color/menuColor"
                android:textColorHint="@color/menuColor"
                android:textColor="@color/menuColor"
                android:inputType="number" />

            <EditText
                android:id="@+id/esp5"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"

                android:ems="10"
                android:hint="Food"
                android:backgroundTint="@color/menuColor"
                android:textColorHint="@color/menuColor"
                android:textColor="@color/menuColor"
                android:inputType="number"/>

            <EditText
                android:id="@+id/esp6"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Health \u0026 Beauty"
                android:backgroundTint="@color/menuColor"
                android:textColorHint="@color/menuColor"
                android:textColor="@color/menuColor"
                android:inputType="number" />

            <EditText
                android:id="@+id/esp7"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Home"
                android:backgroundTint="@color/menuColor"
                android:textColorHint="@color/menuColor"
                android:textColor="@color/menuColor"
                android:inputType="number" />

            <EditText
                android:id="@+id/esp8"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Insurance"
                android:backgroundTint="@color/menuColor"
                android:textColorHint="@color/menuColor"
                android:textColor="@color/menuColor"
                android:inputType="number" />

            <EditText
                android:id="@+id/esp9"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Investments \u0026 Savings"
                android:backgroundTint="@color/menuColor"
                android:textColorHint="@color/menuColor"
                android:textColor="@color/menuColor"
                android:inputType="number" />

            <EditText
                android:id="@+id/esp10"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Leisure Time"
                android:backgroundTint="@color/menuColor"
                android:textColorHint="@color/menuColor"
                android:textColor="@color/menuColor"
                android:inputType="number" />

            <EditText
                android:id="@+id/esp11"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Shopping \u0026 Services"
                android:backgroundTint="@color/menuColor"
                android:textColorHint="@color/menuColor"
                android:textColor="@color/menuColor"
                android:inputType="number" />

            <EditText
                android:id="@+id/esp12"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Uncategorized Expenses / Other"
                android:backgroundTint="@color/menuColor"
                android:textColorHint="@color/menuColor"
                android:textColor="@color/menuColor"
                android:inputType="number" />

            <EditText
                android:id="@+id/esp13"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="100dp"
                android:ems="10"
                android:hint="Vacation \u0026 Travel"
                android:backgroundTint="@color/menuColor"
                android:textColorHint="@color/menuColor"
                android:textColor="@color/menuColor"
                android:inputType="number" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spendingplan_save"
        app:backgroundTint="@color/menuColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spendingplan_cancel"
        app:backgroundTint="@color/menuColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />
</androidx.constraintlayout.widget.ConstraintLayout>