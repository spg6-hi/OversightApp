<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background">


    <TextView
        android:id="@+id/mAccountInformation"
        android:layout_width="295dp"
        android:layout_height="38dp"
        android:text="@string/mAccountDetails"
        android:textColor="@color/menuColor"
        android:gravity="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingHorizontal="20sp"
            android:text="UserName:"
            android:textColor="@color/overSightOrange"
            android:textSize="18sp">

        </TextView>

        <TextView
            android:id="@+id/mAccountUserName"
            android:layout_width="289dp"
            android:layout_height="43dp"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:textColor="@color/menuColor"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35000002">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingHorizontal="20sp"
            android:text="Member since:"
            android:textColor="@color/overSightOrange"
            android:textSize="18sp">

        </TextView>

        <TextView
            android:id="@+id/mAccountCreated"
            android:layout_width="289dp"
            android:layout_height="43dp"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:textColor="@color/menuColor"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingHorizontal="20sp"
            android:text="Total transactions;"
            android:textColor="@color/overSightOrange"
            android:textSize="18sp">

        </TextView>

        <TextView
            android:id="@+id/mAccountTransactions"
            android:layout_width="289dp"
            android:layout_height="43dp"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:textColor="@color/menuColor"
            android:textSize="30sp" />
    </LinearLayout>


    <Button
        android:id="@+id/mDeleteAccountButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/mAccountDelete"
        app:backgroundTint="@color/warning"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mChangePasswordButton" />

    <Button
        android:id="@+id/mChangePasswordButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/mAccountChangePassword"
        app:backgroundTint="@color/menuColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.78" />

    <Button
        android:id="@+id/mAccountGoBack"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/mAccountGoBack"
        app:backgroundTint="@color/menuColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mDeleteAccountButton"
        app:layout_constraintVertical_bias="0.066" />

</androidx.constraintlayout.widget.ConstraintLayout>