<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/accountLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background">


    <TextView
        android:id="@+id/mAccountInformation"
        android:layout_width="295dp"
        android:layout_height="38dp"
        android:text="@string/mAccountDetails"
        android:textColor="@color/menuColor"
        android:gravity="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:padding="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingHorizontal="20sp"
            android:text="@string/mUserName"
            android:textColor="@color/overSightOrange"
            android:textSize="18sp">

        </TextView>

        <TextView
            android:id="@+id/mAccountUserName"
            android:layout_width="289dp"
            android:layout_height="43dp"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            android:textColor="@color/menuColor"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:padding="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35000002">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingHorizontal="20sp"
            android:text="@string/mMemberSince"
            android:textColor="@color/overSightOrange"
            android:textSize="18sp">

        </TextView>

        <TextView
            android:id="@+id/mAccountCreated"
            android:layout_width="289dp"
            android:layout_height="43dp"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            android:textColor="@color/menuColor"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:padding="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingHorizontal="20sp"
            android:text="@string/mTotalTransactions"
            android:textColor="@color/overSightOrange"
            android:textSize="18sp">

        </TextView>

        <TextView
            android:id="@+id/mAccountTransactions"
            android:layout_width="289dp"
            android:layout_height="43dp"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            android:textColor="@color/menuColor"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/mLogOut"
            android:layout_width="220dp"
            android:layout_height="48dp"
            android:layout_marginBottom="5dp"
            android:text="@string/mAccountLogOut"
            android:textAlignment="center"
            app:backgroundTint="@color/menuColor"
            app:fabSize="mini"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.954"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.934"
            tools:ignore="SpeakableTextPresentCheck">

        </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/mChangePassword"
            android:layout_width="220dp"
            android:layout_height="48dp"
            android:layout_marginBottom="5dp"
            android:text="@string/mAccountChangePassword"
            android:textAlignment="center"
            app:backgroundTint="@color/menuColor"
            app:fabSize="mini"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.954"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.934"
            tools:ignore="SpeakableTextPresentCheck">

        </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/mDeleteAccount"
            android:layout_width="220dp"
            android:layout_height="48dp"
            android:layout_marginBottom="5dp"
            android:text="@string/mAccountDelete"
            android:textAlignment="center"
            app:backgroundTint="@color/warning"
            app:fabSize="mini"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.954"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.934"
            tools:ignore="SpeakableTextPresentCheck">

        </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/mAccountFab"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/mAccountFloatingContentDesc"
            android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
            app:backgroundTint="@color/menuColor"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.954"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.934"
            tools:ignore="SpeakableTextPresentCheck">

        </com.google.android.material.floatingactionbutton.FloatingActionButton>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>